<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      <div>Title<br><%= f.text_field :title, :size=>"50" %></div>
      <div>Opinion<br><%= f.text_area :body, :size=>"50" %></div>
      <%= f.submit 'Update Book',class:"btn btn-lg btn-success" %>
    <% end %>
      <%= link_to "Show", book_path(@book) %> |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>